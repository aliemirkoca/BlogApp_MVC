@model BlogApp.Entity.Post

@if(Model == null)
{
<div class="alert alert-warning">
    <h4>Post bulunamadı!</h4>
    <a asp-controller="Posts" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>
}
else
{
<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>


            @if(Model.Tags != null && Model.Tags.Any())
            {
            <div class="tags mb-3">
                @foreach(var tag in Model.Tags)
                {
                <a href="/blogs/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">
                    @tag.Text
                </a>
                }
            </div>
            }

            @if(!string.IsNullOrEmpty(Model.Image))
            {
            <img src="~/lib/bootstrap/img/@Model.Image" class="img-fluid rounded mb-3" alt="@Model.Title">
            }

            <div class="content">
                @Model.Content
            </div>
            <div class="bg-white mt-3">
                <div class="card border-0">
                    <div class="card-header pb-0">
                        <h4>@Model.Comments.Count() adet yorum</h4>
                    </div>
                    <div class="card-body">
                        @foreach(var comment in Model.Comments)
                        {
                        <div class="my-4 d-flex">

                            <img src="~/lib/bootstrap/img/@comment.User.Image" alt=""
                                class="avatar rounded-circle float-start me-3" style="width: 3rem; height: 3rem;">
                            <div>
                                <div class="mb2 d-flex">
                                    <h6 class="me-2">@comment.User.UserName</h6>
                                    <small>@comment.PublishedOn.ToString("d")</small>
                                </div>
                                <p>@comment.Text</p>

                            </div>

                        </div>
                        }
                        @if(User.Identity!.IsAuthenticated)
                        {


                        <hr class="my-4">
                        <div>
                            <h4>Yorum Ekle</h4>
                            <form action="/posts/AddComment" method="post">
                                <input type="hidden" name="PostId" value="@Model.PostId">
                                <input type="hidden" name="Url" value="@Model.Url">
                                <div class="mb-3">
                                    <label for="Text" class="form-label">Yorum</label>
                                    <textarea type="text" name="Text" id="Text" rows="3"
                                        class="form-control"></textarea>
                                </div>

                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                        </div>
                        }
                        else
                        {
                        <p>Yorum için uygulamaya giriş yapmalısınız. <a href="/users/login">Giriş Yap</a></p>
                        }
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <a asp-controller="Posts" asp-action="Index" class="btn btn-secondary">← Geri Dön</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <div class="mb-3"></div>
        <vc:new-post></vc:new-post>
    </div>
</div>
}